    <div class="list-item">
                <div class="item-attribute-id"><input type="text" name="id" value="<%= product.id %>" readonly></div>
                <div class="item-attribute"><input type="text" name="name" value="<%= product.name %>"></div>
                <div class="item-attribute"><input type="text" name="size" value="<%= product.size %>"></div>
                <div class="item-attribute"><input type="text" name="price" value="<%= product.price %>"></div>
                <div class="item-attribute"><input type="text" name="quantity" value="<%= product.quantity %>"></div>
        
                <button type="submit">Update</button>
            </form>
